extends layout

block content
	h1 用户注册
	form#signup(method='post')
		if error
			div.error!= error
		div.field
			label(for='username') 用户名:
			input(id='username' name='username' value placeholder="  请设置用户名")
			br
			p.error

		div.field
			label(for='password') 密码:
			input(id='password' name='password' type='password' value placeholder="  请设置密码")
			br
			p.error

		div.field
			label(for='repeatpassword') 重复密码:
			input(id='repeatpassword' type='password' value placeholder="  请重新输入密码")
			br
			p.error

		div.field
			label(for='sid') 学号:
			input(id='sid' name='sid' value placeholder="  请设置用学号")
			br
			p.error

		div.field
			label(for='phone') 电话:
			input(id='phone' name='phone' value placeholder="  请设置电话")
			br
			p.error

		div.field
			label(for='email') 邮箱
			input(id='email' name='email' value placeholder="  请设置邮箱")
			br
			p.error

		div.button
			input.button.reset(type="reset" value="清除")
			input.button.submit(type="submit" value="提交")
			a(href="http://127.0.0.1:8000/signin")
				input.button(type="button" value="登录")
	script(type='text/javascript' src='javascripts/validator.js')
	script(type='text/javascript' src='javascripts/signup.js')